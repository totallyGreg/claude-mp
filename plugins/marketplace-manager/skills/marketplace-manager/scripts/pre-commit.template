#!/bin/bash
#
# marketplace-manager pre-commit hook v4.0.0
#
# Pre-commit hook for marketplace-manager
# Checks staged files for version bumps and syncs marketplace.json + README.md
#
# Installation:
#   bash plugins/marketplace-manager/skills/marketplace-manager/scripts/install_hook.sh
#
# Bypass (if needed):
#   git commit --no-verify
#

HOOK_VERSION="4.0.0"

# Colors for output
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Find repository root
REPO_ROOT=$(git rev-parse --show-toplevel)
MARKETPLACE_JSON="$REPO_ROOT/.claude-plugin/marketplace.json"

echo -e "${BLUE}üîç Checking for marketplace version mismatches...${NC}"

# Check if marketplace.json exists
if [ ! -f "$MARKETPLACE_JSON" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  No marketplace.json found, skipping version sync${NC}"
    exit 0
fi

# Discover script paths dynamically (robust to skill renames)
# Try plugin path first (v2.0.0+), then legacy skills path
if [ -f "$REPO_ROOT/plugins/marketplace-manager/skills/marketplace-manager/scripts/detect_version_changes.py" ]; then
    DETECT_SCRIPT="$REPO_ROOT/plugins/marketplace-manager/skills/marketplace-manager/scripts/detect_version_changes.py"
    SYNC_SCRIPT="$REPO_ROOT/plugins/marketplace-manager/skills/marketplace-manager/scripts/sync_marketplace_versions.py"
elif [ -f "$REPO_ROOT/skills/marketplace-manager/scripts/detect_version_changes.py" ]; then
    # Legacy path (pre-v2.0.0)
    DETECT_SCRIPT="$REPO_ROOT/skills/marketplace-manager/scripts/detect_version_changes.py"
    SYNC_SCRIPT="$REPO_ROOT/skills/marketplace-manager/scripts/sync_marketplace_versions.py"
else
    # Fallback: search for scripts anywhere in repository
    SYNC_SCRIPT=$(find "$REPO_ROOT/plugins" "$REPO_ROOT/skills" -type f -name "sync_marketplace_versions.py" 2>/dev/null | head -n 1)
    DETECT_SCRIPT=$(find "$REPO_ROOT/plugins" "$REPO_ROOT/skills" -type f -name "detect_version_changes.py" 2>/dev/null | head -n 1)
fi

# Validate scripts were found
if [ -z "$DETECT_SCRIPT" ] || [ -z "$SYNC_SCRIPT" ] || [ ! -f "$DETECT_SCRIPT" ] || [ ! -f "$SYNC_SCRIPT" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  marketplace-manager scripts not found, skipping version sync${NC}"
    echo -e "${YELLOW}   Expected: sync_marketplace_versions.py and detect_version_changes.py${NC}"
    exit 0
fi

# Check if hook version is outdated
TEMPLATE_PATH="$(dirname "$SYNC_SCRIPT")/pre-commit.template"
if [ -f "$TEMPLATE_PATH" ]; then
    TEMPLATE_VERSION=$(grep -m 1 "^# marketplace-manager pre-commit hook v" "$TEMPLATE_PATH" | sed 's/.*v\([0-9.]*\).*/\1/')
    if [ -n "$TEMPLATE_VERSION" ] && [ "$TEMPLATE_VERSION" != "$HOOK_VERSION" ]; then
        echo -e "${YELLOW}‚ö†Ô∏è  Hook version outdated: v$HOOK_VERSION (template: v$TEMPLATE_VERSION)${NC}"
        echo -e "${YELLOW}   Update with: bash plugins/marketplace-manager/skills/marketplace-manager/scripts/install_hook.sh${NC}"
    fi
fi

# Step 1: Check staged files for version bumps
echo -e "${BLUE}üîç Checking staged files for version bumps...${NC}"
if ! python3 "$DETECT_SCRIPT" --check-staged > /dev/null 2>&1; then
    echo -e "${YELLOW}‚ö†Ô∏è  Some staged files may need version bumps${NC}"
    # Show details
    python3 "$DETECT_SCRIPT" --check-staged 2>&1 | grep -A 100 "Components missing"
    echo -e "${YELLOW}   Consider bumping versions before committing.${NC}"
    echo -e "${YELLOW}   Bypass with: git commit --no-verify${NC}"
    # Note: This is a warning, not a block - the commit can proceed
fi

# Step 2: Detect SKILL.md vs marketplace.json mismatches
echo -e "${BLUE}üîç Checking marketplace version sync...${NC}"
if ! python3 "$DETECT_SCRIPT" > /dev/null 2>&1; then
    echo -e "${YELLOW}‚ö†Ô∏è  Version mismatches detected${NC}"

    # Run sync in auto mode
    echo -e "${BLUE}üîÑ Auto-syncing marketplace.json...${NC}"
    if python3 "$SYNC_SCRIPT" --mode=auto 2>&1 | grep -q "Updated"; then
        # Changes were made, add marketplace.json and README.md to staging
        git add "$MARKETPLACE_JSON"
        README_PATH="$REPO_ROOT/README.md"
        if [ -f "$README_PATH" ] && ! git diff --quiet "$README_PATH" 2>/dev/null; then
            git add "$README_PATH"
        fi
        echo -e "${GREEN}‚úÖ marketplace.json updated and staged${NC}"
    else
        echo -e "${RED}‚ùå Failed to sync marketplace.json${NC}"
        echo -e "${YELLOW}   Please run: python3 scripts/sync_marketplace_versions.py${NC}"
        echo -e "${YELLOW}   Or bypass with: git commit --no-verify${NC}"
        exit 1
    fi
else
    echo -e "${GREEN}‚úÖ All marketplace versions up to date${NC}"
fi

exit 0
