{
  "$id": "self-assessment.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CoSAI-RM Self-Assessment Schema",
  "description": "Schema for validating YAML-based self-assessment definition",
  "type": "object",
  "properties": {
    "selfAssessment": { "$ref": "#/definitions/selfAssessment" }
  },
  "required": ["selfAssessment"],
  "definitions": {
    "selfAssessment": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "$ref": "riskmap.schema.json#/definitions/utils/text" },
        "personas": {
          "type": "object",
          "properties": {
            "text": { "$ref": "riskmap.schema.json#/definitions/utils/text" },
            "multipleChoice": { "type": "boolean" },
            "answers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "label": { "$ref": "personas.schema.json#/definitions/persona/properties/id" },
                  "value": {
                    "type": "integer",
                    "enum": [1, 2]
                  }
                },
                "required": ["label", "value"]
              }
            }
          },
          "required": ["text", "answers"]
        },
        "questions": {
          "type": "array",
          "items": { "$ref": "#/definitions/selfAssessment/definitions/question" }
        }
      },
      "required": ["title", "description", "personas", "questions"],

      "definitions": {
        "question": {
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "text": { "$ref": "riskmap.schema.json#/definitions/utils/text" },
            "answers": { "$ref": "#/definitions/selfAssessment/definitions/answers" },
            "personas": {
              "type": "array",
              "items": { "$ref": "personas.schema.json#/definitions/persona/properties/id" }
            },
            "risks": {
              "type": "array",
              "items": { "$ref": "risks.schema.json#/definitions/risk/properties/id" }
            },
            "relevance": {
              "type": "array",
              "items": { "$ref": "#/definitions/selfAssessment/definitions/answers/items/properties/label" }
            }
          },
          "required": ["id", "text", "answers"]
        },

        "answers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string",
                "enum": ["Yes", "No", "Maybe"]
              },
              "value": {
                "type": "integer",
                "enum": [1, 2, 3]
              }
            }
          },
          "required": ["label", "value"]
        }
      }
    }
  }
}
